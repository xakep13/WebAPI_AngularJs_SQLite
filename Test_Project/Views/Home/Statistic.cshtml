@{
    ViewBag.Title = "Statistic";
}

<body data-ng-app="APIModule">
    <hr />
    <div id="tblSubs" ng-controller="StatController">
        <div class="container">
            <div class="row">
                <h1>Statistic</h1>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover tabel-condensed">
                        <thead>
                            <tr>                           
                                <th>Type</th>
                                <th>Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in items">
                                <td>{{item.Type}}</td>
                                <td>{{item.Count}}</td>                           
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td align="center" colspan="6">
                                    <ul class="pagination">
                                        <li ng-repeat="n in range(1,totalPage)" ng-click="ChangeData(n)" ng-class="(n==index)?'page-item active':'page-item'"><a href="#">{{n}}</a></li>
                                    </ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
      </div>
</body>

